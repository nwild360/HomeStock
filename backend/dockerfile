# Base: small, secure, reproducible (Python 3.13 - latest stable)
FROM python:3.13-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    LD_LIBRARY_PATH=/usr/local/lib

WORKDIR /app

# System deps (only what we need)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    cmake \
    git \
    libssl-dev && \
    rm -rf /var/lib/apt/lists/*

# Install liboqs 0.14.0 (matches liboqs-python 0.14.1 compatibility)
# Following official liboqs-python Dockerfile approach
RUN git clone --depth 1 --branch 0.14.0 https://github.com/open-quantum-safe/liboqs.git && \
    cmake -S liboqs -B liboqs/build \
        -DCMAKE_INSTALL_PREFIX=/usr/local \
        -DBUILD_SHARED_LIBS=ON && \
    cmake --build liboqs/build --parallel 4 && \
    cmake --build liboqs/build --target install && \
    ldconfig && \
    rm -rf liboqs

# Install Python deps first (cache-friendly)
COPY requirements.txt /app/requirements.txt
RUN pip install --upgrade pip && pip install -r /app/requirements.txt

# Copy application code
COPY app /app/app

# Create non-root user
RUN useradd -m -u 10001 appuser
USER appuser

EXPOSE 8000
# FastAPI via Uvicorn (no --reload in prod)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
